    {
        organisation: 'Low Carbon Contracts Company',
        role: 'Quantitative Developer Intern',
        time: '2023'
    },
    {
        organisation: 'The University of Hong Kong',
        role: 'Teaching Assistant',
        time: '2021 - 2023'
    },
    {
        organisation: 'Shatin Pui Ying College',
        role: 'Maths and Physics Programmer',
        time: '2021 - 2022'
    },
    {
        organisation: '.',
        role: '.',
        time: '.'
    },
    {
        organisation: 'Imperial College London',
        role: 'MSc Environmental Data Science and Machine Learning',
        time: '2024 - 2025'
    },
    {
        organisation: 'The University of Hong Kong',
        role: 'BEng Computer Science',
        time: '2020 - 2024'
    },
    {
        organisation: 'Royal Holloway, University of London',
        role: 'Study Abroad',
        time: '2023'
    }
];
// Function to calculate `data-aos-duration` based on index
function calculateAosDuration(index) {
    return 1500 + index * 200; // Example: Increment duration by 200ms for each project
}
---

<section class="bg-primary">
    <div class="px-8 2xl:max-w-7xl mx-auto py-6">
        <div class="mt-6 space-y-2">
            <div
                class="h-0.5 bg-secondary"
                data-aos="fade-up"
                data-aos-duration="1000"
            >
            </div>
            <h3
                class="text-secondary text-base font-medium"
                data-aos="fade-up"
                data-aos-duration="1500"
            >
                <span class="font-bold">CV</span>
            </h3>
        </div>
        <div class="flex flex-col text-secondary pt-2 mt-2 gap-1">
            {
                items.map((item, index) => (
                    <div
                        data-aos="fade-up"
                        data-aos-duration={calculateAosDuration(index)}
                    >
                        <div class="flex flex-col justify-between items-start lg:grid grid-cols-8 lg:gap-3 lg:items-center cv-item py-1">
                            <span class="font-light text-sm col-start-2 col-end-4">
                                {item.organisation}
                            </span>
                            <span class="font-light text-sm col-start-4 col-end-7">
                                {item.role}
                            </span>
                            <span class="font-light text-sm col-start-8 col-end-9 text-right">
                                {item.time}
                            </span>
                        </div>
                    </div>
                ))
            }
            <!-- <a
                class="text-sm font-light ml-auto mt-12 underline hover:bg-highlight cursor-pointer"
                href="https://lemuellee.com/cv.pdf">Full PDF</a
            > -->
        </div>
    </div>
</section>
