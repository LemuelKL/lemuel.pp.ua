---
// Define the array of projects directly in the frontmatter script.
const otherprojects = [
    {
        url: 'https://github.com/LemuelKL/fyp23049',
        title: 'Bachelor Thesis',
        description:
            'Deep Graph Representation Learning on Corss-border Electricity Trading.',
    },
    {
        url: 'https://github.com/EnergieID/entsoe-py',
        title: 'EnergieID/entsoe-py',
        description:
            'Python API client for European Network of Transmission System Operators for Electricity.',
    },
    {
        url: 'https://github.com/d-mok/MathTree',
        title: 'd-mok/MathTree',
        description:
            'Web editor and JavaScript-based DSL for generating Maths and Physics MCQs',
    },
    {
        url: 'https://github.com/LemuelKL/3230shell',
        title: 'Linux Shell',
        description:
            'With program execution, signals, piping, background processes, and process statistics.',
    },
    // Add more projects as needed...
]

// Function to calculate `data-aos-duration` based on index
function calculateAosDuration(index) {
    return 1500 + index * 500 // Example: Increment duration by 500ms for each project
}
---

<section class="bg-primary">
    <div class="px-8 2xl:max-w-7xl mx-auto py-32">
        <div class="space-y-2">
            <!-- Section Title and Decorative Elements -->
            <div
                class="h-0.5 bg-secondary"
                data-aos="fade-up"
                data-aos-duration="1000"
            >
            </div>
            <h3
                class="text-secondary text-base font-medium"
                data-aos="fade-up"
                data-aos-duration="1500"
            >
                <span>Selected</span>
                <span class="font-bold">projects</span>
            </h3>
        </div>

        <ul
            class="mx-auto grid grid-cols-1 sm:grid-cols-2 text-secondary lg:grid-cols-4 items-start gap-6 mt-32"
            role="list"
        >
            {
                otherprojects.map((project, index) => (
                    <li
                        class="flow-root h-full group"
                        data-aos="fade-up"
                        data-aos-duration={calculateAosDuration(index)}
                    >
                        <a href={project.url}>
                            <div class="h-full flex flex-col justify-between group-hover:bg-secondary ease-in-out transition-all duration-300 lg:pt-24">
                                <p class="text-7xl font-semibold lg:rotate-90 lg:translate-y-6 lg:-translate-x-22 lg:mb-8 xl:mb-0">
                                    0{index + 1}.
                                </p>
                                <p class="italic shrink-0">{project.title}</p>
                                <p class="text-xl  mt-3 leading-6 indent-9">
                                    {project.description}
                                </p>
                            </div>
                        </a>
                    </li>
                ))
            }
        </ul>
    </div>
</section>
